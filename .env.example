PORT=4000
NODE_ENV=development

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI / OpenRouter API
# For OpenRouter: use your OpenRouter API key (starts with sk-or-)
# For OpenAI: use your OpenAI API key (starts with sk-)
# Note: Embeddings now run locally using all-MiniLM-L6-v2 (no API key needed for embeddings)
OPENAI_API_KEY=sk-or-your-openrouter-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_CHUNKS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Python Microservice
PYTHON_SERVICE_URL=http://localhost:5000
